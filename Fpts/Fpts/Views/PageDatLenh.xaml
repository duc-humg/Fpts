                      ColumnDefinitions="50,50,50,50"
                      ColumnSpacing="60"
                      Padding="30,0,40,0"
                      IsVisible="false"
                      x:Name="xl_gia">
                    <BoxView BackgroundColor="#4D4D4D"
                             Grid.Column="0"
                             x:Name="txt_lo"
                             VerticalOptions="CenterAndExpand">
                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="LO_tap" />
                        </BoxView.GestureRecognizers>
                    </BoxView><!--Lo-->
                    <Label Text="LO"
                           TextColor="Orange"
                           FontSize="20"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="LO_tap" />
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#4D4D4D"
                             Grid.Column="1"
                             x:Name="txt_ato"
                             VerticalOptions="CenterAndExpand">
                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ATO_tap" />
                        </BoxView.GestureRecognizers>
                    </BoxView><!--ATO-->
                    <Label Text="ATO"
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="1"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ATO_tap" />
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#4D4D4D"
                             Grid.Column="2"
                             x:Name="txt_mp"
                             VerticalOptions="CenterAndExpand">
                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="MP_tap" />
                        </BoxView.GestureRecognizers>
                    </BoxView><!--MP-->
                    <Label Text="MP"
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="2"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="MP_tap" />
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#4D4D4D"
                             Grid.Column="3"
                             x:Name="txt_atc"
                             VerticalOptions="CenterAndExpand">
                        <BoxView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ATC_tap" />
                        </BoxView.GestureRecognizers>
                    </BoxView><!--ATC-->
                    <Label Text="ATC"
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="3"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ATC_tap" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid><!--các loại giá -->
                <Label Text=" Mật khẩu giao dịch"
                       TextColor="Black"
                       FontSize="20"
                       Grid.Column="0"
                       Grid.Row="5"
                       VerticalOptions="CenterAndExpand" /><!--lbl_mk-->
                <Button Text="Xác nhận mua "
                        TextColor="White"
                        BackgroundColor="#4242"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        CornerRadius="60"
                        FontSize="22"
                        FontAttributes="Bold"
                        Margin="60,0,60,0"
                        x:Name="btn_mua" /><!--btn xam-->
                <Button Text="Xác nhận mua "
                        TextColor="White"
                        BackgroundColor="#1976D3"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        CornerRadius="60"
                        FontSize="22"
                        FontAttributes="Bold"
                        Margin="60,0,60,0"
                        x:Name="btn_ban"
                        IsVisible="false" /><!--btn xanhnhat-->
                <Button Text="Xác nhận mua "
                        TextColor="White"
                        BackgroundColor="#1D60AE"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        CornerRadius="60"
                        FontSize="22"
                        FontAttributes="Bold"
                        Margin="60,0,60,0"
                        x:Name="btn_ban1"
                        IsVisible="false" /><!--btn xanhdam-->
                <Button Text="Xác nhận bán "
                        TextColor="White"
                        BackgroundColor="#E18A90"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        CornerRadius="60"
                        FontSize="22"
                        FontAttributes="Bold"
                        Margin="60,0,60,0"
                        x:Name="btn_mua1"
                        IsVisible="false" /><!--btn hongnhat-->
                <Button Text="Xác nhận bán "
                        TextColor="White"
                        BackgroundColor="#C4151C"
                        Grid.ColumnSpan="2"
                        Grid.Row="6"
                        CornerRadius="60"
                        FontSize="22"
                        FontAttributes="Bold"
                        Margin="60,0,60,0"
                        x:Name="btn_mua2"
                        IsVisible="false" /><!--btn do-->
