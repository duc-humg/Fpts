                       x:Name="lbl_tran"
                       TextColor="#9C377B"
                       FontSize="15"
                       Grid.Column="0"
                       Grid.Row="2"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand" />
                <BoxView BackgroundColor="#4D4D4D"
                         Grid.Column="1"
                         Grid.Row="1"
                         Grid.RowSpan="2" />
                <Label Text="TC"
                       TextColor="White"
                       FontSize="15"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand" />
                <Label Text="0"
