                       FontSize="15"
                       TextColor="Blue"
                       HorizontalOptions="StartAndExpand"
                       Padding="10"
                       x:Name="text1" />
                <Label Text="Số dư CK:     0"
                       VerticalOptions="CenterAndExpand"
                       FontSize="15"
                       TextColor="Blue"
                       HorizontalOptions="StartAndExpand"
                       Padding="10,0,0,0"
                       x:Name="text2"
