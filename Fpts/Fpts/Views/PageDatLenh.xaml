                           Grid.Column="1"
                           FontSize="17"
                           VerticalOptions="CenterAndExpand" />
                    <Label Text="Tỷ lệ vay"
                           FontSize="17"
                           Grid.Column="2"
                           TextColor="Black"
                           VerticalOptions="CenterAndExpand" />
                    <Label Text="Ngày ĐH"
                           FontSize="17"
                           Grid.Column="3"
                           Padding="0,0,20,0"
