                           Keyboard="Url"
                           CursorPosition="10"
                           TextTransform="Uppercase"
                           VerticalOptions="CenterAndExpand"
                           TextColor="Black"
                           FontSize="20"
                           SelectionLength="10"
                           HorizontalTextAlignment="Center"
                           x:Name="entry1"
