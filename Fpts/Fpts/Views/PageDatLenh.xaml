                             Grid.Row="1"
                             Grid.ColumnSpan="4" 
                             Margin="10,0,20,0"/>
                </Grid>
                <Grid   ColumnDefinitions="100,*,100,*"      
                        Grid.Row="4"
                              BackgroundColor="White">
                    <Image Source="hong.png"
                           Margin="60,25,20,15" 
                           Grid.Column="0"/>
                    <Label Text="Xử lý"
                           FontSize="18"
                           Margin="0,20,20,10"
                           Grid.Column="1"
                           VerticalOptions="CenterAndExpand"/>
                    <Image Source="vang.png"
                           Margin="60,25,20,15"
                           Grid.Column="2" />
                    <Label Text="Hết hạn"
                           FontSize="18"
                           Margin="0,20,20,10"
                           Grid.Column="3"
                           VerticalOptions="CenterAndExpand" />
                </Grid>
            </Grid>
