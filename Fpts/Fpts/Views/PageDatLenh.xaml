                           Text="{Binding max , Mode=TwoWay}"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="CenterAndExpand"
                           x:Name="lbl_gia"></Entry>
                </Grid>
               
                <Entry IsPassword="True"
                       Placeholder="Mật khẩu giao dịch"
