                       Text="0"
                       TextColor="White"
                       FontSize="15"
                       Grid.Column="5"
                       Grid.Row="2"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand" />
            </Grid><!--hiển thị mã-->
            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="50,50,50,50,60,50,50"
                  Padding="5,10,5,5"
                  RowSpacing="15"
                  Grid.Row="2">
